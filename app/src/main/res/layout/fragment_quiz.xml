<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    tools:context=".ui.patient_pages.patient.QuizFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="40dp"
       android:orientation="vertical">

       <androidx.recyclerview.widget.RecyclerView
           android:layout_width="match_parent"
           android:layout_height="500dp"
           android:id="@+id/patient_quiz_recycler"
           >

       </androidx.recyclerview.widget.RecyclerView>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/quiz_can_save"
           android:visibility="gone"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="20dp"
           android:text="Ответьте на все вопросы"
           android:textColor="@color/red"
           >

       </TextView>

       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="match_parent"
           android:layout_height="56dp"
           android:layout_marginTop="40dp"
           android:background="@drawable/primary_btn_style"
           android:text="Завершить тест"
           android:id="@+id/finish_test_btn"
           android:textColor="@color/white"
           >
       </androidx.appcompat.widget.AppCompatButton>
   </LinearLayout>

</androidx.core.widget.NestedScrollView>